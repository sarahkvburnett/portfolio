#card 
    card()
    setWidth()
    flexCenter column
    justify-content: space-between
    background: none
    position: relative
    padding: 5vh 2vw
    .line
        margin: 0
        background: linear-gradient($white, $white) no-repeat center/1px 100%;
        height: 5vh
        width: 100%
    .bgImg
        border()
    .buttons
        a
            buttonDefaults()
            display: block
            text-align: center
            font-size: 14px
            margin: 0
        @media (min-width: desktop) 
            display: grid
            grid-template-columns: repeat(4, 1fr)
    .headings
        width: 60%
        padding: 2vh 2vw
        text-align: center
        border()
        border-left: none 
        border-right: none
        * 
            margin: 2vh 0


